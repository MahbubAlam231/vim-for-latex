snippet im "Adding a image" w
![${1:${VISUAL:Image}}](${2:${1/\\\w+\{(.*?)\}|\\(.)|(\w+)|([^\w\\]+)/(?4:-:\L$1$2$3\E)/g}}.jpg)$0
endsnippet

snippet '\bima(g(e)?)?' "making link to image filename" rw
![${1:image_name}](${2:${VISUAL:pic.jpg}})$0
endsnippet

snippet '\b(a)?f(i|l)' "Adding a file link" wr
FILE: [${1:${VISUAL:filename_here}}](file:${2:filelink_here})$0
endsnippet

snippet '\b(a)?f(ile|n)' "Adding a file name" wr
FILE: [${1:filename_here}](file:${2:${VISUAL:filelink_here}}$3)$0
endsnippet

snippet pdf "Adding a pdf link" w
PDF: [${1:${VISUAL:filename_here}}](file:${2:filelink_here})$0
endsnippet

snippet mps "Make purpose statement filename"
[$1purpose-statement-`!v strftime("%d-%m-%y")`](${2:${1/\\\w+\{(.*?)\}|\\(.)|(\w+)|([^\w\\]+)/(?4:-:\L$1$2$3\E)/g}}purpose-statement-`!v strftime("%d-%m-%y")`)
endsnippet

